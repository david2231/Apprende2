<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondosil3"
    tools:context="gz.app.comdavid.apprende2.Juegos.juegosilabas3">

    <!-- Contenedor principal-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!-- Puntaje preguntas incorrectas-->
        <TextView
            android:id="@+id/incorrectassilbas3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40dp"
            app:fontFamily="sans-serif-black" />

        <!-- Puntaje preguntas correctas-->
        <TextView
            android:id="@+id/puntajesilabas3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40dp"
            app:fontFamily="sans-serif-black" />

        <!--Silaba GO -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/juesilca17"
            android:background="@drawable/silgo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--Silaba BI -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silbi"
            android:id="@+id/juesilca18"
            android:layout_below="@+id/juesilca17"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--Silaba LU -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silalu"
            android:id="@+id/juesilca19"
            android:layout_below="@+id/juesilca18"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--Silaba LI -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silali"
            android:id="@+id/juesilca20"
            android:layout_below="@+id/juesilca19"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--Silaba DI -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/sildi"
            android:id="@+id/juesilca21"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!--Silaba VA -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silava"
            android:id="@+id/juesilca22"
            android:layout_below="@+id/juesilca21"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!--Silaba NO -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silano"
            android:id="@+id/juesilca23"
            android:layout_below="@+id/juesilca22"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!--Silaba TA -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silata"
            android:id="@+id/juesilca24"
            android:layout_below="@+id/juesilca23"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!--Botón Inicio -->
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/casa_juegosil3"
            android:background="@drawable/home"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--Botón Imagen oculta -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:background="@drawable/gota"
            android:id="@+id/imagencasa3"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/juesilca18"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />

        <!--silaba oculta TA -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silata"
            android:id="@+id/imagensa3"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/imagencasa3"
            android:layout_alignEnd="@+id/imagencasa3"
            android:visibility="invisible" />

        <!--silaba oculta GO -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silgo"
            android:id="@+id/imagenca3"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/imagencasa3"
            android:layout_alignStart="@+id/imagencasa3"
            android:visibility="invisible" />

        <!--silaba oculta Imagen error -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/error"
            android:id="@+id/errorjuego3"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <!--Botón avatar -->
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/sonidosilabas78"
            android:background="@drawable/sonido"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</RelativeLayout>