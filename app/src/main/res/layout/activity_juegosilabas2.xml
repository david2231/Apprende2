<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondosil3"
    tools:context="gz.app.comdavid.apprende2.Juegos.juegosilabas2">

    <!-- Contenedor principal-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!-- Puntaje preguntas incorrectas-->
        <TextView
            android:id="@+id/incorrectassilbas2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40dp"
            app:fontFamily="sans-serif-black" />

        <!-- Puntaje preguntas correctas-->
        <TextView
            android:id="@+id/puntajesilabas2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40dp"
            app:fontFamily="sans-serif-black" />

        <!--Silaba MI -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/juesilca9"
            android:background="@drawable/silami"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--Silaba YE -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silaye"
            android:id="@+id/juesilca10"
            android:layout_below="@+id/juesilca9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--Silaba DA -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silda"
            android:id="@+id/juesilca11"
            android:layout_below="@+id/juesilca10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--Silaba FA -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silfa"
            android:id="@+id/juesilca12"
            android:layout_below="@+id/juesilca11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--Silaba GU -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silgu"
            android:id="@+id/juesilca13"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!--Silaba BA -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silbas"
            android:id="@+id/juesilca14"
            android:layout_below="@+id/juesilca13"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!--Silaba DO -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/sildo"
            android:id="@+id/juesilca15"
            android:layout_below="@+id/juesilca14"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!--Silaba NE -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silane"
            android:id="@+id/juesilca16"
            android:layout_below="@+id/juesilca15"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!--Botón Inicio -->
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/casa_juegosil2"
            android:background="@drawable/home"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--Botón Imagen oculta -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:background="@drawable/dado"
            android:id="@+id/imagencasa2"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/juesilca10"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />

        <!--silaba oculta DO -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/sildo"
            android:id="@+id/imagensa2"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/imagencasa2"
            android:layout_alignEnd="@+id/imagencasa2"
            android:visibility="invisible" />

        <!--silaba oculta DA -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silda"
            android:id="@+id/imagenca2"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/imagencasa2"
            android:layout_alignStart="@+id/imagencasa2"
            android:visibility="invisible" />

        <!--silaba oculta Imagen error -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/error"
            android:id="@+id/errorjuego2"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <!--Botón avatar -->
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/sonidosilabas77"
            android:background="@drawable/sonido"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>
