<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="gz.app.comdavid.apprende2.abc_c"
    android:background="@drawable/fondo3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:id="@+id/imageView2"
            android:background="@drawable/letra1c"
            android:layout_above="@+id/sil_casa"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/sil_casa"
            android:background="@drawable/home"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/siguiente_c"
            android:background="@drawable/ant"
            android:layout_alignTop="@+id/sil_casa"
            android:layout_toRightOf="@+id/anterioir_c"
            android:layout_toEndOf="@+id/anterioir_c" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/sil_sonido"
            android:background="@drawable/sonido"

            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/anterioir_c"
            android:background="@drawable/sig"
            android:layout_alignTop="@+id/siguiente_c"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
