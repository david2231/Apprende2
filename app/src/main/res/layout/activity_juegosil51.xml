<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gz.app.comdavid.apprende2.Juegos.Silabas3.juegosil51">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <!-- Puntaje preguntas incorrectas-->

        <TextView
            android:id="@+id/incorrectassilbass1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40dp"
            app:fontFamily="sans-serif-black" />

        <!-- Perimte almacenar el id de usuario-->
        <TextView
            android:id="@+id/Id_user_silabaS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"/>


        <!-- Perimte almacenar el modulo -->
        <TextView
            android:id="@+id/Modulo_LecturaS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="101"
            android:visibility="gone">
        </TextView>

        <!-- Perimte almacenar el la categoria -->
        <TextView
            android:id="@+id/Categoria_S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:visibility="gone">
        </TextView>

        <!-- Perimte almacenar el submodulo -->
        <TextView
            android:id="@+id/SubmoduloS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="53"
            android:visibility="gone">
        </TextView>

        <!-- Puntaje preguntas correctas-->
        <TextView
            android:id="@+id/puntajesilabass1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40dp"
            app:fontFamily="sans-serif-black" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:id="@+id/siljuegosa"
            android:background="@drawable/silasa"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/siljuegose"
            android:background="@drawable/secador"
            android:layout_below="@+id/siljuegosa"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/siljuegosi"
            android:background="@drawable/sombrero"
            android:layout_below="@+id/siljuegosa"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/siljuegosa2"
            android:background="@drawable/saco"
            android:layout_below="@+id/siljuegosa"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/casa_sill51"
            android:background="@drawable/home"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/silerror51"
            android:background="@drawable/error"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/casa_sill51"
            android:layout_alignEnd="@+id/casa_sill51"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:background="@drawable/saco"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:visibility="gone"
            android:id="@+id/vista51"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/silerror51"
            android:layout_toRightOf="@+id/silerror51"
            android:layout_above="@+id/casa_sill51"></RelativeLayout>


        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/sonidosilabas51"
            android:background="@drawable/sonido"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>
