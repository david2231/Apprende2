<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo3"
    tools:context="gz.app.comdavid.apprende2.Vocales.vocales" >

    <!-- Declaraci贸n del contenedor principal-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!-- Se declara la imagen -->
        <ImageView
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:id="@+id/imageView"
            android:background="@drawable/letra1a"
            android:layout_above="@+id/casa"
            android:layout_centerHorizontal="true" />

        <!-- Bot贸n atras-->
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/casa"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/home" />

        <!-- Bot贸n avatar-->
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/sonido_a"
            android:text="1"
            android:textColor="@color/colorTransparente"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/sonido"
            android:backgroundTintMode="src_over" />

        <!-- Perimte almacenar el nombre de usuario-->
        <TextView
            android:id="@+id/Nombre_user_vocales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone">
        </TextView>

        <!-- Perimte almacenar el modulo -->
        <TextView
            android:id="@+id/Modulo_Vocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="101"
            android:visibility="gone">
        </TextView>

        <!-- Bot贸n siguiente -->
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/siguiente_a"
            android:text="54"
            android:textColor="@color/colorTransparente"
            android:background="@drawable/ant"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</RelativeLayout>


