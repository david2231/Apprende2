<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gz.app.comdavid.apprende2.juegos"
    android:background="@drawable/juegos">

    <!-- Contenedor principal-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!-- Botón juegos silabas-->
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/juegosilabas1"
            android:background="@drawable/silabas1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!-- Botón juegos silabas2-->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/silabas2"
            android:id="@+id/juegosilabas2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <!-- Botón juegos vocales-->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/juegosvocales"
            android:textColor="@android:color/white"
            android:background="@drawable/vocales"
            android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!-- Botón inicio-->
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/casa_juego"
            android:background="@drawable/home"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!-- Botón avatar silenciado-->
        <ImageButton
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:id="@+id/SonidoAvatarJuegoSilencio"
            android:background="@drawable/sonidox"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right|bottom" />

        <!-- Botón avatar-->
        <Button
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:id="@+id/SonidoAvatarJuego"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right|bottom"
            android:background="@drawable/sonido" />
    </RelativeLayout>
</RelativeLayout>
