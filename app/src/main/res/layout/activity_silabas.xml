<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondosil"
    tools:context="gz.app.comdavid.apprende2.Silabas.silabas">

    <!--Contendor principal-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <!-- Perimte almacenar el id de usuario-->
        <TextView
            android:id="@+id/Id_user_silabass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"/>

        <!-- Perimte almacenar el modulo -->
        <TextView
            android:id="@+id/Modulo_silaba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="101"
            android:visibility="gone">
        </TextView>

        <!-- Perimte almacenar el la categoria -->
        <TextView
            android:id="@+id/Categoria_silaba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:visibility="gone">
        </TextView>

        <!-- Perimte almacenar el submodulo -->
        <TextView
            android:id="@+id/Submodulo_silaba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="51"
            android:visibility="gone">
        </TextView>

        <!--Botón Inicio-->
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/sil_casa"
            android:background="@drawable/home"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--Botón avatar-->
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/sil_sonido"
            android:background="@drawable/sonido"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!--Silaba B-->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/button"
            android:background="@drawable/letra1b"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--Silaba C-->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/button2"
            android:background="@drawable/letra1c"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button"
            android:layout_toEndOf="@+id/button" />

        <!--Silaba D-->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/button3"
            android:background="@drawable/letra1d"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button2"
            android:layout_toEndOf="@+id/button2" />

        <!--Silaba F-->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/button4"
            android:background="@drawable/letra1f"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button3"
            android:layout_toEndOf="@+id/button3" />

        <!--Silaba G-->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/button5"
            android:background="@drawable/letra1g"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button4"
            android:layout_toEndOf="@+id/button4" />

        <!--Silaba L-->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/button7"
            android:background="@drawable/letra1n"
            android:layout_below="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--Silaba M-->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/button8"
            android:background="@drawable/letra1m"
            android:layout_alignTop="@+id/button7"
            android:layout_toLeftOf="@+id/button3"
            android:layout_toStartOf="@+id/button3" />

        <!--Silaba P-->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/button9"
            android:background="@drawable/letra1p"
            android:layout_below="@+id/button3"
            android:layout_toRightOf="@+id/button3"
            android:layout_toEndOf="@+id/button3" />

        <!--Silaba R-->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/button10"
            android:background="@drawable/letra1r"
            android:layout_below="@+id/button4"
            android:layout_toRightOf="@+id/button9"
            android:layout_toEndOf="@+id/button9" />

        <!--Silaba S-->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/button11"
            android:background="@drawable/letra1s"
            android:layout_alignTop="@+id/button12"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--Silaba T-->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/button12"
            android:background="@drawable/letra1t"
            android:layout_alignTop="@+id/button13"
            android:layout_toLeftOf="@+id/button13"
            android:layout_toStartOf="@+id/button13" />

        <!--Silaba V-->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/button13"
            android:background="@drawable/letra1v"
            android:layout_alignTop="@+id/button14"
            android:layout_toLeftOf="@+id/button14"
            android:layout_toStartOf="@+id/button14" />

        <!--Silaba Y-->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/button14"
            android:background="@drawable/letra1y"
            android:layout_below="@+id/button9"
            android:layout_toLeftOf="@+id/button15"
            android:layout_toStartOf="@+id/button15" />

        <!--Silaba Z-->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/button15"
            android:background="@drawable/letra1z"
            android:layout_alignTop="@+id/button14"
            android:layout_toRightOf="@+id/button9"
            android:layout_toEndOf="@+id/button9" />

        <!--Silaba N-->
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/letras1n"
            android:id="@+id/button17"
            android:layout_below="@+id/button3"
            android:layout_toRightOf="@+id/button8"
            android:layout_toEndOf="@+id/button8" />
        <!--Contenedor-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/button7"
            android:layout_toLeftOf="@+id/button13"
            android:layout_toStartOf="@+id/button13"></LinearLayout>

    </RelativeLayout>

</RelativeLayout>
