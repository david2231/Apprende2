<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondosil3"
    tools:context="gz.app.comdavid.apprende2.Juegos.Silabas1.juegosilabas4">

    <!-- Contenedor principal-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!-- Puntaje preguntas incorrectas-->
        <TextView
            android:id="@+id/incorrectassilbas4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40dp"
            app:fontFamily="sans-serif-black" />

        <!-- Puntaje preguntas correctas-->
        <TextView
            android:id="@+id/puntajesilabas4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40dp"
            app:fontFamily="sans-serif-black" />

        <!--Silaba LE -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/juesilca25"
            android:background="@drawable/silale"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--Silaba PE -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silape"
            android:id="@+id/juesilca26"
            android:layout_below="@+id/juesilca25"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--Silaba NE -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silane"
            android:id="@+id/juesilca27"
            android:layout_below="@+id/juesilca26"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--Silaba DA -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silda"
            android:id="@+id/juesilca28"
            android:layout_below="@+id/juesilca27"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--Silaba RA -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silara"
            android:id="@+id/juesilca29"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!--Silaba RU -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silaru"
            android:id="@+id/juesilca30"
            android:layout_below="@+id/juesilca29"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!--Silaba VI -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silavi"
            android:id="@+id/juesilca31"
            android:layout_below="@+id/juesilca30"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!--Silaba SO -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silaso"
            android:id="@+id/juesilca32"
            android:layout_below="@+id/juesilca31"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!--Botón Inicio -->
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/casa_juegosil4"
            android:background="@drawable/home"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--Botón Imagen oculta -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:background="@drawable/pera"
            android:id="@+id/imagencasa4"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/juesilca26"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />

        <!--silaba oculta RA -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silara"
            android:id="@+id/imagensa4"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/imagencasa4"
            android:layout_alignEnd="@+id/imagencasa4"
            android:visibility="invisible" />

        <!--silaba oculta PE -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/silape"
            android:id="@+id/imagenca4"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/imagencasa4"
            android:layout_alignStart="@+id/imagencasa4"
            android:visibility="invisible" />

        <!--silaba oculta Imagen error -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/error"
            android:id="@+id/errorjuego4"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <!--Botón avatar -->
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/sonidosilabas79"
            android:background="@drawable/sonido"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>