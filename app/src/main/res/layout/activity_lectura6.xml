<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="gz.app.comdavid.apprende2.lectura6">


    <VideoView
        android:id="@+id/pedroblanco"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true" >


    </VideoView>

    <ImageButton
        android:id="@+id/img_btn_hablar6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/app_name"
        android:onClick="onClickImgBtnHablar6"
        android:background="@drawable/mic"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtGrabarVoz6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:phoneNumber="false"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textoo6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/text_6"
        android:textSize="30dp"
        android:visibility="gone" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/siguiente_lectura6"
        android:background="@drawable/ant"
        android:layout_alignTop="@+id/casa_lectura6"
        android:layout_toRightOf="@+id/anterior_lectura6"
        android:layout_toEndOf="@+id/anterior_lectura6" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/casa_lectura6"
        android:background="@drawable/home"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/play"
        android:id="@+id/botonazul6"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/anterior_lectura6"
        android:background="@drawable/sig"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/omitir6"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/siguiente_lectura6"
        android:layout_below="@+id/txtGrabarVoz6"
        android:background="@android:color/transparent" />

</RelativeLayout>
