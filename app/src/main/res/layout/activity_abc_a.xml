<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gz.app.comdavid.apprende2.abecedario.abc_a"
    android:background="@drawable/fondo3">

    <!-- Declaraci贸n del contenedor principal-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!-- Se declara la imagen -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/casa_aa"
            android:background="@drawable/letra1a" />

        <!-- Bot贸n inicio-->
        <Button
            android:id="@+id/casa_aa"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/home" />

        <!-- Bot贸n siguiente-->
        <Button
            android:id="@+id/siguiente_aa"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/casa_aa"
            android:background="@drawable/ant"
            android:visibility="visible" />

        <!-- Bot贸n avatar-->
        <Button
            android:id="@+id/sonido_aa"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/sonido" />

    </RelativeLayout>
</RelativeLayout>

