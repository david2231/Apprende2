<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/inicio"
    tools:context="gz.app.comdavid.apprende2.Lectura.Ingles.mainactivity2">

    <!-- Contenedor principal-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <!-- Botón Atras-->
        <Button
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:id="@+id/backing"
            android:layout_gravity="left|bottom"
            android:background="@drawable/sig" />

        <!-- Botón avatar inactivo-->
        <Button
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:id="@+id/sonidoing"
            android:visibility="invisible"
            android:layout_gravity="right|bottom"
            android:background="@drawable/sonido" />

        <!-- Botón avatar activo-->
        <ImageButton
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:id="@+id/sonidooing"
            android:background="@drawable/sonidox"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right|bottom"
            android:visibility="visible" />

        <!-- Botón sentences-->
        <Button
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:text=""
            android:id="@+id/palabraing"
            android:background="@drawable/sentences"
            android:layout_gravity="center_horizontal|top" />

        <!-- Switch que cambia de ingles a español-->
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1ing"
            android:layout_gravity="center"
            android:checked="true"
            android:textOn="English"
            android:textOff="Spanish"
            android:textColor="#008F36"
            android:textSize="25sp"/>

    </FrameLayout>



</RelativeLayout>

