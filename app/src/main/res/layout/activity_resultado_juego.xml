<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gz.app.comdavid.apprende2.ResultadoJuegoActivity">

    <!--Contenedor izquierda-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Imagen avatar-->

            <ImageView
                android:id="@+id/avatarImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-50dp"
                android:src="@drawable/avatar2" />

            <!--Nombre usuario-->
            <TextView
                android:id="@+id/textNickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{Apprende}"
                android:layout_below="@+id/avatarImage"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

    <!--Contenedor derecho-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Texto Resultados-->
            <TextView
                android:id="@+id/txtResultados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="RESULTADOS"
                android:textColor="@color/colorAzul"
                android:textSize="30sp"
                android:textStyle="bold" />

        <!-- Palabras correctas-->
            <TextView
                android:id="@+id/txtPalabrasCorrectas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtResultados"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Palabras Correctas"
                android:textSize="20sp"
                android:textStyle="bold" />

        <!-- Contador palabras correctas-->
            <TextView
                android:id="@+id/txtResPalabrasCorrectas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPalabrasCorrectas"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorAzul"
                android:textSize="30sp" />

        <!-- Texto palabras incorrectas-->
            <TextView
                android:id="@+id/txtPalabrasIncorrectas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtResPalabrasCorrectas"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Palabras incorrectas"
                android:textSize="20sp"
                android:textStyle="bold" />

        <!-- Contador palabras incorrectas-->
            <TextView
                android:id="@+id/txtResPalabrasIncorrectas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPalabrasIncorrectas"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorAzul"
                android:textSize="30sp" />

        <!-- Puntaje Obtenido-->
        <TextView
            android:id="@+id/txtPuntajeTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtResPalabrasIncorrectas"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Puntaje Obtenido"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:visibility="invisible" />
    </LinearLayout>

    <!-- BotÃ³n inicio-->
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/inicioJuego1"
        android:background="@drawable/home"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>